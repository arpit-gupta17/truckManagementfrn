// 1ï¸âƒ£ initialize dates
useEffect(() => {
  const today = new Date();
  const dateStr = today.toISOString().split('T')[0];
  setStartDate(dateStr);
  setEndDate(dateStr);
}, []);

// 2ï¸âƒ£ fetch when company + dates are ready âœ…
useEffect(() => {
  if (!id) return;
  if (!startDate || !endDate) return;

  setSelectedCompanyId(id);
  fetchDVIRData();
}, [id, startDate, endDate]);

// 3ï¸âƒ£ refresh on window focus âœ…
useEffect(() => {
  const onFocus = () => {
    if (!startDate || !endDate) return;
    fetchDVIRData();
  };

  window.addEventListener("focus", onFocus);
  return () => window.removeEventListener("focus", onFocus);
}, [startDate, endDate, selectedFilter, searchTerm]);


